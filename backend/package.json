    "@types/node-cron": "^3.0.11",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.16",
    "pdf-lib": "^1.17.1",
    "prisma": "^6.3.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
